@model Zilla.Models.Toast
@{string toastBG; string toastFG;}

<div style="position: fixed; bottom: 3rem; right: 3rem; z-index: 1000;">
        <div class="toast"
             role="alert"
             data-autohide="false"
             aria-live="assertive"
             aria-atomic="true">
            @{ 
                if (Model.Type == Zilla.Models.ToastType.Success) {
                    toastBG = "bg-success";
                    toastFG = "text-white";
                }
                else if (Model.Type == Zilla.Models.ToastType.Danger) {
                    toastBG = "bg-danger";
                    toastFG = "text-white";
                }
                else if (Model.Type == Zilla.Models.ToastType.Warning) {
                    toastBG = "bg-warning";
                    toastFG = "text-white";
                }
                else {
                    toastBG = "bg-dark";
                    toastFG = "text-muted";
                }
            }
            <div class="toast-header @toastBG @toastFG">
                <strong class="mr-auto">@Model.Title</strong>
                <small class="@toastFG">@Model.Date.ToString("HH:mm")</small>
                <button type="button" class="ml-2 mb-1 close" data-dismiss="toast" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="toast-body">
                @Model.Body
            </div>
        </div>
</div>
