@model IEnumerable<Zilla.Models.IndexAccountViewModel>

@{
    ViewBag.Title = "Accounts";
    ViewBag.Message = "All Accounts";
}

<h1 class="pageHeading">
    <i class="fas fa-user-friends" data-fa-transform="shrink-1 up-2 right-2" style="background:#EF9A9A"></i>
    <span>@ViewBag.Title.</span>
</h1>
<h2 class="pageSubheading">
    <span>@ViewBag.Message</span>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Index", "Home")">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</h2>
<div class="pageContent">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.RolesList)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Email)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.UserName)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @String.Join(", ", item.RolesList)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.UserName)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td>
                            <a class="iconAction text-primary" href="@Url.Action("Edit", "Accounts", new { id = item.UserName })"><i class="fas fa-edit"></i></a>
                            <a class="iconAction text-info" href="@Url.Action("Details", "Accounts", new { id = item.UserName })"><i class="fas fa-info"></i></a>
                            <a class="iconAction text-danger" href="@Url.Action("Delete", "Accounts", new { id = item.UserName })"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>