@model Zilla.Models.AddMemberViewModel

@{
    ViewBag.Title = "Teams";
    ViewBag.Message = Model.Team.Title + " - Add member";
}

<h1 class="pageHeading">
    <i class="fas fa-users" data-fa-transform="shrink-1 up-2 right-2" style="background:#EF9A9A"></i>
    <span>@ViewBag.Title.</span>
</h1>
<h2 class="pageSubheading">
    @ViewBag.Message
    <a class="btn btn-danger text-white float-right" href="@Url.Action("Delete", "Teams", new { id = Model.Team.TeamId })">
        <i class="fas fa-trash-alt"></i> Delete
    </a>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Details", "Teams", new { id = Model.Team.TeamId })">
        <i class="fas fa-info"></i> Details
    </a>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Edit", "Teams", new { id = Model.Team.TeamId })">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Index", "Teams")">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</h2>
