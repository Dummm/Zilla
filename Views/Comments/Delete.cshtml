@model Zilla.Models.Comment

@{
    ViewBag.Title = "Comments";
    ViewBag.Message = ".";
}

<h1 class="pageHeading">
    <i class="fas fa-city" data-fa-transform="shrink-1 up-2 right-2" style="background:#EF9A9A"></i>
    <span>@ViewBag.Title.</span>
</h1>
<h2 class="pageSubheading">
    <span>@ViewBag.Message</span>
    <a class="btn btn-primary text-white float-right" href="@Url.Action("Details", "Comments", new { id = Model.CommentId })">
        <i class="fas fa-info"></i> Details
    </a>
    <a class="btn btn-primary float-right mr-1" href="@Url.Action("Edit", "Comments", new { id = Model.CommentId })">
        <i class="fas fa-edit"></i> Edit
    </a>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Details", "Assignments", new { id = Model.Assignment.AssignmentId })">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</h2>
<div class="pageContent">
    <h3>Are you sure you want to delete this comment?</h3>
    <div>
        <dl class="dl-horizontal">
            <dt class="badge badge-secondary">
                @Html.DisplayNameFor(model => model.Content)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.Content)
            </dd>

            <dt class="badge badge-info">
                @Html.DisplayNameFor(model => model.CreationDate)
            </dt>

            <dd>
                @Html.DisplayFor(model => model.CreationDate)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-trash-alt"></i> Delete
                </button>
            </div>
        }
    </div>
</div>
