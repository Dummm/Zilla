@model IEnumerable<Zilla.Models.Comment>

@{
    ViewBag.Title = "Comments";
    ViewBag.Message = "All Comments";
}
<h1 class="pageHeading">
    <i class="fas fa-comments" data-fa-transform="shrink-1 up-2 right-2" style="background:#EF9A9A"></i>
    <span>@ViewBag.Title.</span>
</h1>
<h2 class="pageSubheading">
    <span>@ViewBag.Message</span>
    <a class="btn btn-primary text-white float-right" href="@Url.Action("Create", "Comments")">
        <i class="fas fa-plus"></i> Create Project
    </a>
    <a class="btn btn-primary text-white float-right mr-1" href="@Url.Action("Index", "Home")">
        <i class="fas fa-arrow-left"></i> Back
    </a>
</h2>
<div class="pageContent">
    <div class="table-responsive">
        <table class="table table-bordered table-sm table-striped table-hover">
            <thead>
                <tr>
                    <th>
                        Project
                    </th>
                    <th>
                        Assignment
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Content)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Author)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CreationDate)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="w-20">
                            <p>@Html.DisplayFor(modelItem => item.Assignment.Project.Title)</p>
                        </td>
                        <td class="w-20">
                            <p>@Html.DisplayFor(modelItem => item.Assignment.Title)</p>
                        </td>
                        <td class="w-20">
                            <a href="@Url.Action("Details", "Comments", new { id = item.CommentId})">
                                @Html.DisplayFor(modelItem => item.Content)
                            </a>
                        </td>
                        <td class="w-20">
                            <p>@Html.DisplayFor(modelItem => item.Author.UserName)</p>
                        </td>
                        <td class="w-20">
                            <p>@Html.DisplayFor(modelItem => item.CreationDate)</p>
                        </td>
                        <td>
                            <a class="iconAction text-primary" href="@Url.Action("Edit", "Comments", new { id = item.CommentId })"><i class="fas fa-edit"></i></a>
                            <a class="iconAction text-info" href="@Url.Action("Details", "Comments", new { id = item.CommentId })"><i class="fas fa-info"></i></a>
                            <a class="iconAction text-danger" href="@Url.Action("Delete", "Comments", new { id = item.CommentId  })"><i class="fas fa-trash-alt"></i></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
